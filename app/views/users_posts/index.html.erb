<h1><%= @user.user_name %>'s Posts</h1>
<%= render partial: "posts/list", locals: { posts: @posts } %>

<ul class="pagination">
  <% num_page_links.times do |i| %>
    <% if current_page == start_page_count + i %>
      <li class="active">
        <%= link_to start_page_count + i + 1, users_posts_path(page: start_page_count + i) %>
      </li>
    <% else %>
      <li class>
        <%= link_to start_page_count + i + 1, users_posts_path(page: start_page_count + i) %>
      </li>
    <% end %>
  <% end %>
</ul>
